@model Travel_Experts.Package

@{
    ViewData["Title"] = "Packages";
}

<h1>Package Details</h1>

<div class="container">
    <div class="row">

        <div class="col">
            <div class="card mb-3">
                <h3 class="card-header">@Html.DisplayFor(model => model.PkgName)</h3>
                <div class="card-body">
                    <h5 class="card-title">Special title treatment</h5>
                    <h6 class="card-subtitle text-muted">@Html.DisplayFor(model => model.PkgDesc)</h6>
                </div>
                <div class="card-body">
                    <img src="~/images/@Model.PkgImageLocation" alt=@Model.PkgImageLocation width="250" height="200" />
                </div>

                <div class="card-footer text-muted">
                    @Html.DisplayFor(model => model.PkgStartDate)
                    @Html.DisplayFor(model => model.PkgBasePrice)
                </div>
            </div>
        </div>

        <div class="col">
            <form asp-action="Details">
                <input type="hidden" asp-for="PackageId" />
                <input type="hidden" asp-for="PkgName" />
                <input type="submit" value="Add To Cart" class="btn btn-primary" />
            </form>
        </div>

    </div>
</div>


