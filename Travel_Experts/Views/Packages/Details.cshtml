@model Travel_Experts.Package

@{
    ViewData["Title"] = "Packages";
}

<h1>Package Details</h1>

<div class="container">
    <div class="row">

        <div class="col">
            <div class="card mb-3">
                <h3 class="card-header">@Html.DisplayFor(model => model.PkgName)</h3>
                <div class="card-body">
                    <h5 class="card-title">Special title treatment</h5>
                    <h6 class="card-subtitle text-muted">@Html.DisplayFor(model => model.PkgDesc)</h6>
                </div>
                <svg xmlns="" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
                    <rect width="100%" height="100%" fill="#868e96"></rect>
                    <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text>
                </svg>
                <div class="card-footer text-muted">
                    $@ViewBag.baseprice for 7 days
                </div>
            </div>
        </div>

        <div class="col">
            <form asp-action="Details">
                <input type="hidden" asp-for="PkgName" />
                <input type="hidden" asp-for="PkgDesc" />
                <input type="hidden" asp-for="PkgImageLocation" />
                <input type="hidden" asp-for="PkgBasePrice" id="PkgBasePrice" />
                <input type="hidden" value=@ViewBag.baseprice id="baseprice" />

                <h2>Select package details</h2>
                <h3>$@(ViewBag.baseprice / 7) per person per day</h3>
                <br />

                <div class="row">
                    <div class="col">
                        <label>Passengers: </label>
                    </div>
                    <div class="col">
                        <select id="TravelerCount">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                            <option>6</option>
                        </select>
                    </div>
                </div>
                <br />

                <div class="row">
                    <div class="col">
                        <label>Start Date: </label>
                    </div>
                    <div class="col">
                        <input type="text" asp-for="PkgStartDate" id="datepickerstart" />
                    </div>
                </div>
                <br />

                <div class="row">
                    <div class="col">
                        <label>End Date: </label>
                    </div>
                    <div class="col">
                        <input type="text" asp-for="PkgEndDate" id="datepickerend" />
                    </div>
                </div>
                <br />

                <div class="row">
                    <div class="col">
                        <label>Price: </label>
                    </div>
                    <div class="col">
                        <input type="text" id="Price" />
                    </div>
                </div>
                <br />

                <input type="submit" value="Add To Cart" class="btn btn-primary" />

            </form>
        </div>

    </div>
</div>

@section Scripts
{
    <script src="//code.jquery.com/jquery-3.5.1.min.js"
            type="text/javascript"></script>
    <script src="//code.jquery.com/ui/1.12.1/jquery-ui.min.js"
            type="text/javascript"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            $("#datepickerend").datepicker
                ({
                    altField: "#alternate1",
                    altFormat: "DD, d MM, yy",
                    minDate: new Date((new Date()).getTime() + 86400000),
                    maxDate: "+60D",
                    onSelect: function (selected) {
                        $("#datepickerend").datepicker("option", "maxDate", selected);
                        calcDiff();
                    }
                });

            $("#datepickerstart").datepicker
                ({
                    altField: "#alternate",
                    altFormat: "DD, d MM, yy",
                    minDate: new Date(),
                    maxDate: "+60D",
                    onSelect: function (selected) {
                        $("#datepickerstart").datepicker("option", "minDate", selected);
                        calcDiff();
                    }
                });

        function calcDiff() {
            var date1 = $('#datepickerstart').datepicker('getDate');
            var date2 = $('#datepickerend').datepicker('getDate');
            var base = $('#baseprice').val();
            var passengers = $('#TravelerCount').val();
            var display = "";
            var mystring = "";

            $('#PkgBasePrice').empty();
            var diff = 0;
            if (date1 && date2) {
                diff = Math.floor(((date2.getTime() - date1.getTime()) / 86400000) * (base / 7) * passengers);
                    mystring = display.concat("$", diff.toString());
            }
            $('#Price').val(mystring);
            $('#PkgBasePrice').val(diff);
            }
        });

    </script>
}


