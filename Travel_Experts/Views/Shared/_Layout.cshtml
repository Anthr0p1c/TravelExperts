        <div class="form-popup" id="myForm" style="display:none">
            <form asp-controller="Home" asp-action="Login" class="form-container" method="POST">
                <h2>Sign in</h2>
                <div class="flex">
                    <label for="username"><b>Email:</b></label>
                    <input type="text" placeholder="Enter Email" name="username" required>

                    <label for="password"><b>Password:</b></label>
                    <input type="password" placeholder="Enter Password" name="password" required>
                </div>

                <div class="flex">
                    <button type="submit" class="btn btn-warning" onclick="closeForm()">Close</button>
                    <button type="submit" class="btn btn-success">Sign in</button>

                </div>
            </form>
        </div>

        <div class="form-popup" id="myRegisterForm">
            <form asp-controller="Home" asp-action="Register" class="form-container-register" onSubmit="Validate()" method='POST'>
                <h2>Register</h2>
                <div class="row">
                    <div class="col-4">
                        <label for="email">Email: </label>
                    </div>
                    <div class="col-6">
                        <input type="text" name="email" id="email" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-4">
                        <label for="password">Password: </label>
                    </div>
                    <div class="col-6">
                        <input type="text" name="password" id="password" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-4">
                        <label for="confirm">Confirm Password: </label>
                    </div>
                    <div class="col-6">
                        <input type="text" name="confirm" id="confirm" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-4">
                        <label for="fname">First Name: </label>
                    </div>
                    <div class="col-6">
                        <input type="text" name="fname" id="fname" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-4">
                        <label for="lname">Last Name: </label>
                    </div>
                    <div class="col-6">
                        <input type="text" name="lname" id="lname" />
                    </div>
                </div>

                <h1 id="errors"></h1>

                <button type="button" class="btn btn-warning" onclick="closeRegisterForm()">Close</button>
                <button type="submit" class="btn btn-success">Register</button>
            </form>
        </div>
