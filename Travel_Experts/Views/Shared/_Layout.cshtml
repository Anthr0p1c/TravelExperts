    </header>

    
    <div class="container">
    </div>
    <div>
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100"
                     src="~/images/solaris.jpg" alt="First slide" />
                    <div class="carousel-caption d-none d-md-block">
                        <h3 class="text-light">Description one</h3>
                        <p>Another text here</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100"
                    src="~/images/hardrock.jpg" alt="Second slide" />
                    <div class="carousel-caption d-none d-md-block">
                        <h3 class="text-light">Description 2</h3>
                        <p>Second text here</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100"
                    src="~/images/gallery2.jpg" alt="Third slide" />
                    <div class="carousel-caption d-none d-md-block">
                        <h3 class="text-light">Description 3 </h3>
                        <p>Third text here</p>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @if (TempData.Keys.Contains("message"))
    {
        <div class="alert alert-dismissible @TempData["alert"]">
            <strong>@TempData["message"]</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2021 - Travel_Experts - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
