<ul class="nav navbar-nav navbar-right">

@if (Context.Session.GetInt32("Email") != null)
      
{
        <li class="nav-item">
            <a id="manage" class="nav-link text-light">Hello @Context.Session.GetString("Email")!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-controller="User" asp-action="Logout"  method='POST'>
                
                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
        </li>
}
else
{

        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-page="/User/Login">Login</a>
        </li>
}
 </ul>



