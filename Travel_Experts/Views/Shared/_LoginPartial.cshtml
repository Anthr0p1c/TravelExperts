
@if ((Context.Request.Path != "/User/Login") && (Context.Request.Path != "/User/Register"))
{
    var path = Context.Request.Path;
    Context.Session.SetString("Path", path);
}

<ul class="nav navbar-nav navbar-right">

    @if (Context.Session.GetInt32("Email") != null)

    {
    <li class="nav-item">
        <a id="manage" class="nav-link text-light">Welcome @Context.Session.GetString("Email")!</a>

    </li>
    <li class="nav-item">
        <a id="profile" asp-controller="Customer" asp-action="Index">My Profile</a>
    </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-controller="User" asp-action="Logout" method='POST'>

                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {




        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-controller="User" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-controller="User" asp-action="Login">Login</a>
        </li>
    }
</ul>




