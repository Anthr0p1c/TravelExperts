@model Travel_Experts.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<h1>Please confirm you request to cancellation.</h1>

<h3>Are you sure you want to delete your booking to @Html.DisplayFor(model => model.Package.PkgLocation)?</h3>


<div>


    <dl class="row">
        <dt class="col-sm-2">
            Departing on:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Package.PkgStartDate)
        </dd>
        <dt class="col-sm-2">
            No: of Travellers:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TravelerCount)
        </dd>
        <dt class="col-sm-2">
            Booking Ref:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingId)
        </dd>

    </dl>
    
    <form asp-action="DelBooking">
        <input type="submit" value="Delete Booking" class="btn btn-danger" /> |
        <a asp-action="Profile" asp-controller="Customer">Back to List</a>
    </form>
</div>
