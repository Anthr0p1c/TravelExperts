@model Travel_Experts.Booking

@{
    ViewData["Title"] = "Edit My Booking";
}


<h1>Change Booking</h1>


<div class="card-deck">
    <div class="card border-primary mb-3" style="max-width: 25rem; max-height: 50rem">

        <div class="card-body text-primary">

            <h3 class="card-text">Destination: @Html.DisplayFor(model => model.Package.PkgLocation) </h3>
            <h4 class="card-text">Departing : @Model.Package.PkgStartDate.Value.ToShortDateString() </h4>
            <h5 class="card-text">Returning : @Model.Package.PkgEndDate.Value.ToShortDateString() </h5>
            <h6 class="card-text">Booking ID: @Html.DisplayFor(model => model.BookingId) </h6>
            <h6 class="card-text">Booking Date: @Model.BookingDate.Value.ToShortDateString() </h6>
            <h6 class="card-text">Package Name: @Html.DisplayFor(model => model.Package.PkgName) </h6>
            <h6 class="card-text">Package Desc: @Html.DisplayFor(model => model.Package.PkgDesc) </h6>
            <h6 class="card-text">Cost/Person: @Html.DisplayFor(model => model.Package.PkgBasePrice) </h6>
            

        </div>
    </div>
</div>
            <div class="row">
                <div class="col-md-2">
                    <form asp-action="EditBooking">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="TravelerCount" class="control-label"></label>
                            <input asp-for="TravelerCount" class="form-control" type="number" required min="1" max="6" />
                            <span asp-validation-for="TravelerCount" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                           
                        </div>

                        <input type="hidden" asp-for="BookingId" />
                        <input type="hidden" asp-for="CustomerId" />
                    </form>
                </div>
            </div>

            <div>
                <a asp-controller="Customer" asp-action="Profile">Back to List</a>
            </div>

