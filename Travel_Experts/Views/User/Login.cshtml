<script>document.getElementById("findcon").style.display = "none";</script>

@* login*@
<div class="form-container" id="myForm">
    <br />
    <form asp-controller="User" asp-action="Login" class="form-container" method="POST">
        <h2>Sign in</h2>
        <br /><br />
        <div class="row justify-content-center">
            <div class="col-3" style="text-align:right">
                <label for="username"><b>Email:</b></label>
            </div>
            <div class="col-4">
                <input type="text" placeholder="Enter Email" name="Email" id="Email" required>
            </div>
        </div>
        <br />
        <div class="row justify-content-center">
            <div class="col-3" style="text-align:right">
                <label for="password"><b>Password:</b></label>
            </div>
            <div class="col-4">
                <input type="password" placeholder="Enter Password" name="Password" id="Password" required>
            </div>
        </div>

        <br /><br />
        <div class="flex">

            <a href=@Context.Session.GetString("Path") class="btn btn-primary">Cancel</a>
            <button type="submit" class="btn btn-primary">Sign in</button>

        </div>

    </form>
    <div asp-validation-summary="All" class="text-danger"></div>
</div>


@* END REGISTER/LOGIN *@