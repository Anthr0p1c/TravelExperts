@model Travel_Experts.Package

@{
    ViewData["Title"] = "CheckOut";
}
<div class="text-center">
    <h1>CheckOut</h1>


    <h4>Package Details</h4>
</div>
<div class="container">
    <div class="row">

        <div class="col" style="color:dodgerblue; padding:20px; border-radius:5px; background-color:lightblue; font-size:medium">
            <dd class="col-sm-10">
                <p>Package: @Html.DisplayFor(model => model.PkgName)</p>  
            </dd>
            <dd class="col-sm-10">
                <p>Destination: @Html.DisplayFor(model => model.PkgLocation)</p> 
            </dd>
            <dd class="col-sm-10">
                <p>Travel type: @Html.DisplayFor(model => model.PkgType)</p>
            </dd>
            <dd class="col-sm-10">
                <p>Departure date: @Html.DisplayFor(model => model.PkgStartDate)</p>
            </dd>

            <dd class="col-sm-10">
                <p>Return date: @Html.DisplayFor(model => model.PkgEndDate)</p>
            </dd>

            <dd class="col-sm-10">
                <p>Description: @Html.DisplayFor(model => model.PkgDesc)</p>
            </dd>

            <dd class="col-sm-10">
                <p>Package price: @Html.DisplayFor(model => model.PkgBasePrice)</p>
            </dd>

            <dd class="col-sm-10">
                <p>Passenger count: @Context.Session.GetString("TravelerCount")</p>
            </dd>
        </div>



        <div class="col">
            <form asp-action="CheckOut">
                <input type="hidden" asp-for="PackageId" />
                <input type="hidden" asp-for="PkgName" />

                <label for="type">Card Type: </label>
                <select class="form-select" style="background-color:white; font-size:14px; height:25px"><option value="">Visa</option><option value="">Mastercard</option></select>
                <label for="number">Card Number: </label>
                <input class="form-control" type="text" id="number" />
                <label for="expiration">Expiration Date: </label>
                <input class="form-control" type="text" id="expiration" />

                <input type="submit" value="Submit" class="btn btn-primary" />
            </form>
        </div>

    </div>
</div>

