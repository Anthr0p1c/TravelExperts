@model Travel_Experts.Package

@{
    ViewData["Title"] = "CheckOut";
}
<div class="text-center">
    <h1>CheckOut</h1>


    <h4>Package Details</h4>
</div>

        <dl class="row">

            <div class="col">
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PkgName)
            </dd>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PkgLocation)
            </dd>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PkgType)
            </dd>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PkgStartDate)
            </dd>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PkgEndDate)
            </dd>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PkgDesc)
            </dd>

            <dd class="col-sm-10">
                $@Html.DisplayFor(model => model.PkgBasePrice)
            </dd>

            @*<dd class="col-sm-10">
                    <p>Passenger count: @Context.Session.GetInt32("TravelerCount")</p>
                </dd>*@
        </div>
  


    <div class="col">
        <form asp-action="CheckOut">
            <input type="hidden" asp-for="PackageId" />
            <input type="hidden" asp-for="PkgName" />

            <label for="type">Card Type: </label>
            <select class="form-select" style="background-color:white; font-size:14px;"><option value="">Visa</option><option value="">Mastercard</option></select>
            <label for="number">Card Number: </label>
            <input class="form-control" type="text" id="number" />
            <label for="expiration">Expiration Date: </label>
            <input class="form-control" type="text" id="expiration" />

            <input type="submit" value="Submit" class="btn btn-primary" />
        </form>
    </div>

    </dl>


