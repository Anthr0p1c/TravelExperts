@model IEnumerable<Travel_Experts.Package>

@{
    ViewData["Title"] = "Travel Experts";
}


<div class="container">
    <div class="row">
        <form asp-action="Find">
         
            <img src="~/images/image3.jpg" style="height: 500px; width:1272px"  />
          

            @*<select class="form-select" asp-items="ViewBag.PkgName"><option value="">Destination</option></select>
            <select class="form-select" asp-items="ViewBag.PkgStartDate"></select>
            <select class="form-select" asp-items="ViewBag.PkgDesc"><option value="">Trip Type</option></select>*@
            <input type="submit" value="Find" class="btn btn-primary" />

        </form>
    </div>
</div>


<div class="text-center">
    <h1>Popular Packages</h1>
</div>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
        <div class="col">
            <div class="card mb-3">
                <h4 class="card-header">@Html.DisplayFor(modelItem => item.PkgName)</h4>
                
                <a asp-controller="Packages" asp-action="Details" asp-route-id=@item.PackageId>
                    <div class="card-body">
                        <img src="~/images/@item.PkgImageLocation" alt=@item.PkgImageLocation width="250" height="200" />
                    </div>
                </a>
                <div class="card-body">
                    
                    <h5 class="card-subtitle text-muted">@Html.DisplayFor(modelItem => item.PkgDesc)</h5>


                </div>
                <div class="card-body">
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Cras justo odio</li>
                    <li class="list-group-item">Dapibus ac facilisis in</li>
                    <li class="list-group-item">Vestibulum at eros</li>
                </ul>
                <div class="card-body">
                    <a href="#" class="card-link">Card link</a>
                    <a href="#" class="card-link">Another link</a>
                </div>
                <div class="card-footer text-muted">
                    @Html.DisplayFor(modelItem => item.PkgStartDate)
                    @Html.DisplayFor(modelItem => item.PkgBasePrice)
                </div>
            </div>
        </div>

        }
    </div>
</div>

